<div id="main-content">

    <div style="text-align:center;">
        <div class="dropdown">
            <label class="dropdown-toggle text-uppercase backoffice-header-dropdown" id="dropdownMenuLink" data-toggle="dropdown">
                {{headText}}
            </label>
            <div class="dropdown-menu backoffice-header-dropdown-item scrollable-menu" aria-labelledby="dropdownMenuLink">
                {{#each listDomain}}
                {{#ifCond ../headText '!==' this.name}}
                <li>
                    <a class="dropdown-item">{{this.name}}</a>
                </li>
                {{/ifCond}}
                {{/each}}

            </div>
        </div>
    </div>

    <div class="accordion" id="accordionExample" style="padding: 0px 10%; margin: 50px 0px 50px 0px;">
        {{#ifCond dataDomain.smsSubscribe.category.length '>' 0}}
        <div class="card">
            <div class="card-header collaspe-header" id="headingSMS">
                <label class="container">SMS
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
                <span class="glyphicon glyphicon-plus-sign" style="float:right; margin:12px 0px; cursor:pointer;"
                    data-toggle="collapse" data-target="#collapseSMS" aria-expanded="true" aria-controls="collapseSMS"></span>
            </div>

            <div id="collapseSMS" class="collapse" style="padding: 0px 10%;" aria-labelledby="headingSMS">
                <div class="card-body">
                    {{#each dataDomain.smsSubscribe.category}}
                    <label class="container">{{this.name}}
                        <input type="checkbox" value="{{this.value}}" checked="checked">
                        <span class="checkmark"></span>
                    </label><br>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/ifCond}}
        {{#ifCond dataDomain.emailSubscribe.category.length '>' 0}}
        <div class="card">
            <div class="card-header  collaspe-header DomainHeader" id="headingEmail">
                <label class="container">Email
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
                <span class="glyphicon glyphicon-plus-sign" style="float:right; margin:12px 0px; cursor:pointer;"
                    data-toggle="collapse" data-target="#collapseEmail" aria-expanded="true" aria-controls="collapseEmail"></span>
            </div>

            <div id="collapseEmail" class="collapse" style="padding: 0px 10%;" aria-labelledby="headingEmail">
                <div class="card-body">
                    {{#each dataDomain.emailSubscribe.category}}
                    <label class="container">{{this.name}}
                        <input type="checkbox" value="{{this.value}}" checked="checked">
                        <span class="checkmark"></span>
                    </label><br>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/ifCond}}
        <div class="card">
            <div class="card-header collaspe-header" id="headingEmail">
                <label class="container">Mobile
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </div>
        </div>
    </div>
    <div style="text-align:center">
        <button class="btn btn-default" style="margin-right: 50px;">บันทึก</button>
        <button class="btn btn-default">ยกเลิก</button>
    </div>
</div>

<style scoped>
    .container {
        width: fit-content;
        position: relative;
        padding-left: 35px;
        margin-bottom: 12px;
        cursor: pointer;
        font-size: 22px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    /* Hide the browser's default checkbox */
    .container input {
        position: absolute;
        opacity: 0;
        cursor: pointer;
        height: 0;
        width: 0;
    }

    /* Create a custom checkbox */
    .checkmark {
        position: absolute;
        top: 0;
        left: 0;
        height: 25px;
        width: 25px;
        background-color: #eee;
    }

    /* On mouse-over, add a grey background color */
    .container:hover input~.checkmark {
        background-color: #ccc;
    }

    /* When the checkbox is checked, add a blue background */
    .container input:checked~.checkmark {
        background-color: #535354;
    }

    /* Create the checkmark/indicator (hidden when not checked) */
    .checkmark:after {
        content: "";
        position: absolute;
        display: none;
    }

    /* Show the checkmark when checked */
    .container input:checked~.checkmark:after {
        display: block;
    }

    /* Style the checkmark/indicator */
    .container .checkmark:after {
        left: 9px;
        top: 5px;
        width: 5px;
        height: 10px;
        border: solid white;
        border-width: 0 3px 3px 0;
        -webkit-transform: rotate(45deg);
        -ms-transform: rotate(45deg);
        transform: rotate(45deg);
    }
</style>
</style>

<script>
    $('.dropdown-toggle').dropdown()
    $('.collapse').collapse()

    function onSubmit() {

    }
</script>