<div id="main-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1><span class="line">{{{headText}}}</span></h1>
            </div>
        </div>
    </div>
</div>
<!-- Page Content -->
<div id="main-content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="box-gray">
                    <div class="box-gray-text">
                        <div class="title">ข้อมูลข่าวสารที่ท่านต้องการรับ คือ</div>

                        {{#if hasSmsSubscribeCategory}}
                        <p class="text-blue"><strong>SMS</strong></p>
                        {{#each smsSubscribeCategory}}
                        <p class="text-blue">{{this}}</p>
                        {{/each}}
                        {{/if}}

                        {{#if hasEmailSubscribe}}
                        <hr>
                        <p class="text-blue"><strong>Email</strong></p>
                        {{#each emailSubscribeCategory}}
                        <p class="text-blue">{{this}}</p>
                        {{/each}}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</div>